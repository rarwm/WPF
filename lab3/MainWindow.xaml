<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="t1" />
        <TextBox x:Name="t2" Text="{Binding ElementName=t1, Path=Text}"/>
        <Slider x:Name="slider1" Margin="294,99,243,160" />
        <Slider x:Name="slider2" Value="{Binding ElementName=slider1, Path=Text}" HorizontalAlignment="Left" Width="132" Margin="35,99,0,183" />
        
    </Grid>
</Window>
